<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/TX_background"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 注册账号"
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="#FAC53C"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal">
        <EditText
            android:id="@+id/register_username"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_edittext_normal"
            android:inputType="number"
            android:gravity="center"
            android:textColor="@color/black"
            android:hint="输入账号"
            android:textColorHint="#626367"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/register_password"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_edittext_normal"
            android:inputType="textPassword"
            android:gravity="center"
            android:textColor="@color/black"
            android:hint="输入密码"
            android:textColorHint="#626367"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:gravity="center">

        <ImageView
            android:id="@+id/register_success_btn"
            android:clickable="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/right_login"/>
    </LinearLayout>
</LinearLayout>