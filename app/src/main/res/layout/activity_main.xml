<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/TX_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="#FAC53C"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal">
        <EditText
            android:id="@+id/logon_username_edit"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_edittext_normal"
            android:inputType="number"
            android:gravity="center"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/logon_password_edit"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_edittext_normal"
            android:inputType="textPassword"
            android:gravity="center"
            android:textColor="@color/black"
            android:hint="输入密码"
            android:textColorHint="#626367"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/logon_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/right_login"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center">
        <TextView
            android:clickable="true"
            android:id="@+id/register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="注册账号"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="|"/>

        <TextView
            android:id="@+id/YiBan_login"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="易班登录"/>

    </LinearLayout>


</LinearLayout>